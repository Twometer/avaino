<Window x:Class="avaino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:avaino"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:sn="http://scintillanet.codeplex.com"
        mc:Ignorable="d"
        Title="Avaino v1.0" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <sn:ScintillaWPF Grid.Row="1" Name="Scintilla" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Transparent"/>
        <Button  Grid.Row="0" x:Name="FormatButton" Content="Format" Click="FormatButton_Click"/>
    </Grid>
</Window>
